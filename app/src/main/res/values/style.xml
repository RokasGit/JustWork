<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="editTextStyling">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/edittext_roundcorners</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="boldText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textColor">@color/boldTextColor</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="smallText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textColor">@color/smallTextColor</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="defaultButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:background">@drawable/button_roundcorners</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>

    </style>
</resources>