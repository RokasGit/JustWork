<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColorForLayout"
    tools:context=".sign_up_company">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/register_company_title"
        style="@style/boldText"
        android:layout_width="283sp"
        android:layout_height="40sp"
        android:layout_marginStart="30dp"

        android:layout_marginTop="100dp"
        android:text="@string/register_company"
        android:viewportWidth="238"
        android:viewportHeight="33"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fill_details"
        style="@style/smallText"
        android:layout_width="229sp"
        android:layout_height="24sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="140dp"
        android:text="@string/fill_details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/set_company_name"
        style="@style/editTextStyling"
        android:layout_width="335sp"
        android:layout_height="54sp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="252dp"
        android:background="@color/colorOnPrimary"
        android:drawableStart="@drawable/prompt_username"
        android:drawablePadding="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Company Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/set_company_email"
        style="@style/editTextStyling"

        android:layout_width="335sp"
        android:layout_height="54sp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="330dp"
        android:background="@color/colorOnPrimary"
        android:drawableStart="@drawable/prompt_email"
        android:drawablePadding="30dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="Email Address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/set_company_password"
        style="@style/editTextStyling"
        android:layout_width="335sp"
        android:layout_height="54sp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="408dp"
        android:background="@color/colorOnPrimary"
        android:drawableStart="@drawable/prompt_password"
        android:drawablePadding="30dp"
        android:ems="10"
        android:inputType="textPassword"
        android:text="Email Address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_company_next"
        android:layout_width="335dp"
        android:layout_height="54dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="502dp"
        style="@style/defaultButton"
        android:text="Next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/already_have_account"
        style="@style/ordinary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="596dp"
        android:text="Already Have an Account?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/company_log_in"
        style="@style/bolded_ordinary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="596dp"
        android:layout_marginStart="5dp"

        android:text="Log In"
        app:layout_constraintStart_toEndOf="@+id/already_have_account"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>