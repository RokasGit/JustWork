<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.View_Job_Applicant">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/image_google"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/view_jobApplicant_name"
        style="@style/boldText"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:text="Adam Shafi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/view_jobApplicant_gender"
        style="@style/smallText"
        android:textAlignment="center"
        android:layout_marginTop="0dp"
        android:text="male"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_jobApplicant_name" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_jobApplicant_gender" />

    <TextView
        android:id="@+id/view_jobApplicant_address"
        style="@style/smallText"
        android:text="@string/address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar" />

    <EditText
        android:id="@+id/view_jobApplicant_editTextAddress"
        style="@style/editTextStyling"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_jobApplicant_address" />

    <TextView
        android:id="@+id/view_jobApplicant_cpr"
        style="@style/smallText"
        android:layout_marginStart="50dp"
        android:text="@string/cpr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_jobApplicant_editTextAddress" />

    <TextView
        android:id="@+id/view_jobApplicant_Licence"
        style="@style/smallText"
        android:layout_marginEnd="50dp"
        android:text="@string/licence"
        app:layout_constraintBaseline_toBaselineOf="@+id/view_jobApplicant_cpr"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/view_jobApplicant_editTextLicence"
        style="@style/editTextStyling"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/view_jobApplicant_editTextCpr"
        app:layout_constraintTop_toBottomOf="@+id/view_jobApplicant_Licence" />

    <EditText
        android:id="@+id/view_jobApplicant_editTextCpr"
        style="@style/editTextStyling"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@id/view_jobApplicant_editTextLicence"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_jobApplicant_cpr" />

    <Button
        android:id="@+id/view_jobApplicant_button_Accept"
        style="@style/defaultButton"
        android:layout_marginTop="16dp"
        android:backgroundTint="#A5CFFA"
        android:text="@string/accept"
        android:textColor="#1976D2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_jobApplicant_editTextCpr" />

    <Button
        android:id="@+id/view_jobApplicant_button_Reject"
        style="@style/defaultButton"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FFD4E5"
        android:text="@string/reject"
        android:textColor="#EA4C89"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.175"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_jobApplicant_button_Accept" />


</androidx.constraintlayout.widget.ConstraintLayout>