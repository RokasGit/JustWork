<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColorForLayout"
    tools:context=".sign_up_company">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/register_company_title"
        style="@style/boldText"
        android:layout_width="283sp"
        android:layout_height="40sp"
        android:layout_marginStart="30dp"

        android:layout_marginTop="100dp"
        android:text="@string/register_company"
        android:viewportWidth="238"
        android:viewportHeight="33"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fill_details"
        style="@style/smallText"
        android:layout_width="229sp"
        android:layout_height="24sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="140dp"
        android:text="@string/fill_details_second"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/set_company_cvrNo"
        style="@style/editTextStyling"
        android:layout_width="335sp"
        android:layout_height="54sp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="252dp"
        android:background="@color/colorOnPrimary"
        android:drawableStart="@drawable/prompt_cpr"
        android:drawablePadding="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="CVR Number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/set_company_headQ_address"
        style="@style/editTextStyling"
        android:layout_width="335sp"
        android:layout_height="54sp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="330dp"
        android:background="@color/colorOnPrimary"
        android:drawableStart="@drawable/prompt_address"
        android:drawablePadding="30dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="Headquarters Address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <Button
        android:id="@+id/button_company_signUp"
        style="@style/defaultButton"
        android:layout_width="335dp"
        android:layout_height="54dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="502dp"
        android:text="Sign Up"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>