<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColorForLayout"
    tools:context=".signUpCompany">

    <!-- TODO: Update blank fragment layout -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/register_company_title"
        style="@style/fragment_title"
        android:layout_width="283sp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="0dp"
        android:text="@string/register_company"
        android:viewportWidth="238"
        android:viewportHeight="33"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fill_details"
        style="@style/smallText"
        android:layout_width="283sp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        android:text="@string/fill_details_second"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/set_company_cvrNo"
        style="@style/editTextStyling"
        android:layout_width="335sp"
        android:layout_height="54sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="78dp"
        android:background="@color/colorOnPrimary"
        android:drawableStart="@drawable/prompt_cpr"
        android:drawablePadding="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="CVR Number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/set_company_headQ_address"
        style="@style/editTextStyling"
        android:layout_width="335sp"
        android:layout_height="54sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:background="@color/colorOnPrimary"
        android:drawableStart="@drawable/prompt_address"
        android:drawablePadding="30dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="Headquarters Address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <Button
        android:id="@+id/button_company_signUp"
        style="@style/defaultButton"
        android:layout_width="335dp"
        android:layout_height="54dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="94dp"
        android:layout_marginBottom="200dp"
        android:text="Sign Up"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>