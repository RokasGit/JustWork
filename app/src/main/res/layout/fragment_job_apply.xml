<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColorForLayout"
    tools:context=".Job_apply">

    <EditText
        android:id="@+id/Apply_editTextMessage"
        style="@style/editTextStyling"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Apply_textView_message" />

    <TextView
        android:id="@+id/Apply_textView_FirstName"
        style="@style/smallText"
        android:text="@string/first_name"
        android:textColor="@color/smallTextColor"
        app:layout_constraintBaseline_toBaselineOf="@+id/Apply_textView_LastName"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/Apply_editTextEmail"
        style="@style/editTextStyling"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Apply_textView_email" />

    <TextView
        android:id="@+id/Apply_textView_LastName"
        style="@style/smallText"
        android:layout_marginTop="32dp"
        android:text="@string/last_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Apply_textView_Country"
        style="@style/smallText"
        android:text="@string/country"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Apply_editTextEmail" />

    <Spinner
        android:id="@+id/Apply_spinner_Country"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Apply_textView_Country" />

    <TextView
        android:id="@+id/Apply_textView_email"
        style="@style/smallText"
        android:text="@string/your_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Apply_editTextFirstName" />

    <EditText
        android:id="@+id/Apply_editTextFirstName"
        style="@style/editTextStyling"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/Apply_textView_FirstName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/Apply_editTextSecondName"/>

    <EditText
        android:id="@+id/Apply_editTextSecondName"
        style="@style/editTextStyling"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:inputType="textPersonName"
        android:ems="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/Apply_editTextFirstName"
        app:layout_constraintTop_toBottomOf="@+id/Apply_textView_LastName" />

    <TextView
        android:id="@+id/Apply_textView_message"
        style="@style/smallText"
        android:text="@string/message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Apply_spinner_Country" />

    <TextView
        android:id="@+id/Apply_textView_CV"
        style="@style/smallText"
        android:text="@string/cv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Apply_editTextMessage" />

    <Button
        android:id="@+id/Apply_button"
        android:layout_marginBottom="32dp"
        style="@style/defaultButton"
        android:text="@string/apply_now"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>