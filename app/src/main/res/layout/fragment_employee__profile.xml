<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColorForLayout"
    tools:context=".Employee_Profile">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/image_google"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Profile_Name"
        style="@style/boldText"
        android:layout_marginTop="8dp"
        android:text="Adom Shafi"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/Profile_edit"
        style="@style/smallText"
        android:text="@string/edit_profile"
        android:layout_marginTop="0dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Profile_Name" />

    <TextView
        android:id="@+id/Profile_NameInsert"
        style="@style/smallText"
        android:layout_marginTop="24dp"
        android:text="@string/name_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Profile_edit" />

    <EditText
        android:id="@+id/Profile_editTextPersonName"
        style="@style/editTextStyling"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Profile_NameInsert" />

    <TextView
        android:id="@+id/Profile_Email"
        style="@style/smallText"
        android:layout_marginTop="24dp"
        android:text="@string/email_Profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Profile_editTextPersonName" />

    <EditText
        android:id="@+id/Profile_editTextEmail"
        style="@style/editTextStyling"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Profile_Email" />

    <TextView
        android:id="@+id/Profile_Password"
        style="@style/smallText"
        android:layout_marginTop="24dp"
        android:text="@string/password_Profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Profile_editTextEmail" />

    <EditText
        android:id="@+id/Profile_editTextPassword"
        style="@style/editTextStyling"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Profile_Password" />

    <Button
        android:id="@+id/button"
        style="@style/defaultButton"
        android:layout_marginBottom="28dp"
        android:text="Save Now"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>